<header>
  <h1><%= @user.email %></h1>

  <ul class="actions">
    <li><%= link_to "Edit User", edit_admin_user_path(@user), class:"edit" %>
    </li>
    <% admins_only do %>
        <li><%= link_to "Archive user", archive_admin_user_path(@user), method: :patch, data: {confirm: "Are you sure you want to delete this user?"},  class:"delete" %>
        </li>
    <% end %>
  </ul>
</header>

